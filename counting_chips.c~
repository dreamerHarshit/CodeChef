#include<bits/stdc++.h>

#define  s(t) scanf("%d",&t);
#define  S(x,y) scanf("%lld%lld",&x,&y)
#define  q(x,y,z) scanf("%lld%lld%lld",&x,&y,&z)
#define  p(t) printf("%d\n",t)

using namespace std;

int main()
{
 int t;
 s(t);
 while(t--)
 {
  int n,i,sum=0;
  int a[100];
  s(n);
  for(i=0;i<n;i++)
  {
   s(a[i]);
   sum=sum+a[i];
  }
  if(sum%2==0)
   printf("0\n");
  else
    printf("1\n"); 
 }
return 0;
}
